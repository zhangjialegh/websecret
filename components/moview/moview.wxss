/* components/moview/moview.wxss */
@import "/assets/iconfont/icon.wxss";
.move-wrapper {
  width: 110rpx;
  height: 60rpx;
  border-radius: 30rpx;
  position: fixed;
  bottom: 200rpx;
  left: -50rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: var(--base-color);
  /* border: 1rpx solid #000; */
  /* box-shadow: 0 0 0 1rpx rgba(0,0,0,.1), 0 2px 4px 0 rgba(0,0,0,.16); */
}
.move-box {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.move-box > .iconfont {
  font-size: 50rpx;
  color: #fff;
}